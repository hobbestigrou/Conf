xterm*foreground: green
!}}}

!{{{urxvt
!General
urxvt*background : black
 !Couleur du text (enfin du premier plan)
urxvt*foreground : green
 !La police utilisé
urxvt*font : xft:Envy Code R:pixelsize=17
 !Le fond transparent
urxvt*transparent : true
 !Le taux de transparence en % de 0-100 cela assombri et de 100-200 éclaici
urxvt*shading : 30
 !Cela donne une teinte la transparence
 !ne marche pas pour les fonds en mosaïque
urxvt*tint : black

!Extension
urxvt*scrollBar : false
urxvt*perl-lib: /usr/lib/urxvt/perl/
urxvt*perl-ext-common: default,matcher,searchable-scrollback
urxvt*urlLauncher: chromium-browser
urxvt*matcher.button: 1
! Catch ugly URLs
urxvt*cutchars: '"'()*<>[]{|}
!}}}
